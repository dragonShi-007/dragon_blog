<assembly>
	<id>package</id>
	<formats>
		<format>dir</format>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main/bin</directory>
			<outputDirectory>bin</outputDirectory>
			<fileMode>755</fileMode>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>/conf</outputDirectory>
			<filtered>true</filtered>
			<excludes>
				<exclude>**/*.xls</exclude>
				<exclude>**/*.vm</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>/conf</outputDirectory>
			<filtered>false</filtered>
			<includes>
				<include>**/*.xls</include>
				<include>**/*.vm</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>lib</directory>
			<outputDirectory>lib</outputDirectory>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>
</assembly>